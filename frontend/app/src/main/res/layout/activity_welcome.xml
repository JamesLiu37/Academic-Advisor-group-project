<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wisc.academicadvisor.Welcome"
    android:background="@color/darkgray">

    <ImageView
        android:id="@+id/rectusername"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:src="@drawable/rectangle"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/academicadvisor"
        android:layout_centerHorizontal="true">
    </ImageView>

    <ImageView
        android:id="@+id/rectpassword"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:src="@drawable/rectangle"
        android:layout_below="@+id/rectusername"
        android:layout_alignLeft="@+id/rectusername"
        android:layout_alignStart="@+id/rectusername"
        android:layout_marginTop="14dp">
    </ImageView>

    <TextView
        android:id="@+id/academicadvisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_name"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="203dp"
        android:textSize="35sp"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="sans"/>

    <!-- <Button
        android:id="@+id/createanaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_create_btn"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="359dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" /> -->

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Username"
        android:background="@android:color/transparent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/rectusername"
        android:layout_alignLeft="@+id/rectusername"
        android:layout_alignStart="@+id/rectusername"
        android:layout_alignRight="@+id/rectusername"
        android:layout_alignEnd="@+id/rectusername" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:background="@android:color/transparent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/rectpassword"
        android:layout_alignLeft="@+id/rectpassword"
        android:layout_alignStart="@+id/rectpassword"
        android:layout_alignRight="@+id/rectpassword"
        android:layout_alignEnd="@+id/rectpassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/welcome_login_btn"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="283dp"
        android:layout_below="@+id/rectpassword"
        android:layout_alignLeft="@+id/rectpassword"
        android:layout_alignStart="@+id/rectpassword"
        android:layout_alignRight="@+id/rectpassword"
        android:layout_alignEnd="@+id/rectpassword"
        android:background="@drawable/buttoncurve"/>

    <TextView
        android:id="@+id/haveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Don't have an account?"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:textColor="#e5e5e5"/>

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up."
        android:layout_alignBaseline="@+id/haveAccount"
        android:layout_alignBottom="@+id/haveAccount"
        android:layout_alignRight="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:textColor="@color/lightBlue"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/uwmadison_logo"
        android:layout_below="@+id/academicadvisor"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
